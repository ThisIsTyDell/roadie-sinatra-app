<h1 class="page-header">Edit Equipment</h1>

<form class="form-inline" method="POST" action="/equipment/<%= @item.id %>">
  <input id="hidden" type="hidden" name="_method" value="patch">
  <div class="form-group">
    <label class="sr-only">Name:</label>
    <input type="text" name="name" value="<%= @item.name %>" class="form-control">
  </div>
  <div class="form-group">
    <label class="sr-only">Value (in dollars)</label>
    <div class="input-group">
      <div class="input-group-addon">$</div>
      <input type="number" name="value" value="<%= @item.value %>" class="form-control">
      <div class="input-group-addon">.00</div>
    </div>
  </div>
  <h2>Move item to different truck</h2>
  <label>Select Existing Truck:</label>
  <select name="truck_id" class="form-control">
    <% current_user.trucks.each do |truck| %>
      <option value="<%= truck.id %>"<%= 'selected' if truck.id == @item.truck_id %>><%= truck.name %></option>
    <% end %>
  </select>
  <input type="submit" value="Submit" class="form-control">
</form>