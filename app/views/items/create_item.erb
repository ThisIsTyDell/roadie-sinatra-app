<h1 class="page-header">Add Equipment</h1>
<% if flash.has?(:message) %>
  <%= flash[:message] %>
<% end %>
<form method="POST" action="/equipment">
  <div class="form-group col-md-6">
    <label class="sr-only">Name</label>
    <input type="text" name="name" class="form-control" placeholder="Name" required>
  </div>
  <div class="form-group col-md-6">
    <label class="sr-only">Value (in dollars)</label>
    <div class="input-group">
      <div class="input-group-addon">$</div>
      <input type="number" name="value" class="form-control" placeholder="Value" required>
      <div class="input-group-addon">.00</div>
    </div>
  </div>
  <h2>Select an Existing Truck or Create New Truck</h2>
  <div class="form-group col-md-6">
    <label>Select Existing Truck:</label>
    <select name="truck" class="form-control">
      <option value="">No, I want to Create New Truck</option>
      <% current_user.trucks.each do |truck| %>
        <option value="<%= truck.name %>"><%= truck.name %></option>
      <% end %>
    </select>
  </div>
  <div class="form-group col-md-6">
    <label>Create New Truck:</label>
    <input type="text" name="new_truck" class="form-control" placeholder="Skip if selecting existing">
  </div>
  <input type="submit" value="Submit" class="form-control">
</form>