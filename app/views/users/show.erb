<div class="page-header"><h1><%= @user.username %><small> - You are managing <%= @user.trucks.size %> truck<%= 's' if @user.trucks.size > 1 || 0 %>.</small></h1></div>

<h2>Trucks</h2>
<div class="container-fluid">
<% @user.trucks.each do |truck| %>
  <div class="col-md-6">
    <h3><a href="/trucks/<%= truck.id %>"><%= truck.name %></a></h3>
    <h4>Equipment <small> - <%= truck.items.size %></small></h4>
  </div>
<% end %>
</div>