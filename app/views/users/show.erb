<h1>Welcome <%= @user.username %> to your equipment dashboard</h1>

<h2>Trucks</h2>
<div class="container-fluid">
<% @user.trucks.each do |truck| %>
  <div class="col-md-3">
    <h3><a href="/trucks/<%= truck.id %>"><%= truck.name %></a></h3>
    <h4>Equipment</h4>
      <% truck.items.each do |item| %>
      <%= item.name %>: $<%= item.value %>
    <% end %>
  </div>
<% end %>
</div>